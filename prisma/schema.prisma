// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now()) @map("created_at")

  cart  Cart[]
  order Orders[]
}

model Item {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String
  category    String
  price       Int
  image_id    String?
  quantity    Int
  createdAt   DateTime    @default(now()) @map("created_at")
  cart        Cart[]
  orderItem   OrderItem[]
}

model Cart {
  user   User @relation(fields: [userId], references: [id])
  userId Int

  item      Item     @relation(fields: [itemId], references: [id])
  itemId    Int
  quantity  Int      @default(1)
  createdAt DateTime @default(now()) @map("created_at")

  @@id([userId, itemId])
}

model Orders {
  id           String      @id @unique
  user         User        @relation(fields: [userId], references: [id])
  userId       Int
  total_amount Int
  createdAt    DateTime    @default(now()) @map("created_at")
  orderItem    OrderItem[]
}

model OrderItem {
  order   Orders  @relation(fields: [orderId], references: [id])
  orderId String

  item      Item     @relation(fields: [itemId], references: [id])
  itemId    Int
  quantity  Int      @default(1)


  @@id([orderId, itemId])
}
